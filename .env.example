# Wolf Control Environment Variables Template
# ==========================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin Credentials
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=your_secure_admin_password

# Security Settings
PASSWORD_SALT=your_unique_salt_string
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5

# Application Settings
APP_NAME=Wolf Control
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# Contact Information (for support)
SUPPORT_WHATSAPP=+966XXXXXXXXX
SUPPORT_EMAIL=support@example.com
SUPPORT_PHONE=+966XXXXXXXXX

# Renewal Website URL
RENEWAL_WEBSITE_URL=https://your-renewal-website.com

# Database Settings
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
ENABLE_ERROR_LOGGING=true
ENABLE_ACCESS_LOGGING=false

# Cache Settings
CACHE_ENABLED=true
CACHE_DURATION=300000

# Backup Settings
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
